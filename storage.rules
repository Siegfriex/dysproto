rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // TEMPORARY: Allow all reads and writes for development
    // TODO: Re-enable authentication rules when auth is fully set up

    // Helper function to validate image files
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // Helper function to validate file size (max 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Allow all access with basic file validation
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isImage() && isValidSize();
    }
  }
}
