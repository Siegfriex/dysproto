rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    // Anonymous authentication counts as authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to validate image files
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // Helper function to validate file size (max 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Users folder: users can read/write their own files
    match /users/{userId}/{allPaths=**} {
      // 사용자는 자신의 파일만 읽을 수 있음
      // Firebase Storage SDK를 사용하면 인증 정보가 자동으로 포함됨
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // 사용자는 자신의 폴더에만 파일을 쓸 수 있음
      allow write: if isAuthenticated() && 
                      request.auth.uid == userId &&
                      isImage() && 
                      isValidSize();
    }
  }
}
